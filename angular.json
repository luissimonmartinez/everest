{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "everest": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              },
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "/assets/"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [
              "src/assets/js/jquery-3.6.3.min.js",
              "src/assets/js/jquery-migrate-3.0.0.min.js",
              "src/assets/js/bootstrap.min.js",
              "src/assets/js/popper.min.js",
              "src/assets/js/owl.carousel.min.js",
              "src/assets/js/datepicker.js",
              "src/assets/js/select2.js",
              "src/assets/js/jquery.magnific-popup.js",
              "src/assets/js/YouTubePopUp.js",
              "src/assets/js/jquery.stellar.min.js",
              "src/assets/js/jquery.waypoints.min.js",
              "src/assets/js/modernizr-2.6.2.min.js",
              "src/assets/js/scrollIt.min.js",
              "src/assets/js/smooth-scroll.min.js",
              "src/assets/js/sticky-kit.min.js",
              "src/assets/js/validator.js",
              "src/assets/js/map.js",
              "src/assets/js/custom.js"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "everest:build:production"
            },
            "development": {
              "buildTarget": "everest:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.scss"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "d2efcf4c-88e3-4283-9972-c7266aaa62a5"
  }
}
